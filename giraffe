  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Giraffe Eating Lettuce (HTML + Emoji)</title>
  <style>
    /* Scene setup */
    :root {
      --w: 720px;
      --h: 360px;
      --sky1: #bfe7ff;
      --sky2: #e7f6ff;
      --ground: #d6e3a3;
    }
    body {
      margin: 0;
      min-height: 100vh;
      display: grid;
      place-items: center;
      font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial;
      background: radial-gradient(70% 60% at 50% 35%, var(--sky2), var(--sky1));
    }
    .scene {
      position: relative;
      width: var(--w);
      height: var(--h);
      border-radius: 20px;
      overflow: hidden;
      box-shadow: 0 20px 40px rgba(0,0,0,.12);
      background: linear-gradient(#cfeefe 0 65%, var(--ground) 65% 100%);
      border: 2px solid rgba(0,0,0,.08);
    }

    .title {
      position: absolute;
      top: 10px;
      width: 100%;
      text-align: center;
      font-weight: 700;
      color: #1f2937;
      opacity: .9;
      letter-spacing: .2px;
    }

    .sun { position: absolute; top: 16px; right: 20px; font-size: 40px; }

    /* Giraffe */
    .giraffe {
      position: absolute;
      bottom: 65px; /* sit just above ground */
      left: 80px;
      font-size: 120px; /* big emoji */
      line-height: 1;
      transform-origin: 60% 80%;
      animation: nibble 1s steps(2, end) infinite; /* subtle chew */
    }
    @media (prefers-reduced-motion: reduce) {
      .giraffe { animation: none; }
      .lettuce { animation: none !important; }
    }
    @keyframes nibble {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-2px); }
    }

    /* Lettuce (emoji) animates toward the giraffe's mouth and resets */
    .lettuce {
      position: absolute;
      bottom: 110px; /* aim at the giraffe's mouth height */
      right: -80px;  /* start just off-screen right */
      font-size: 64px;
      line-height: 1;
      filter: drop-shadow(0 2px 2px rgba(0,0,0,.15));
      animation: chomp 5s linear infinite;
    }

    /* SFX sparkle when eaten */
    .sparkle {
      position: absolute;
      bottom: 150px;
      left: 160px; /* around giraffe mouth */
      font-size: 26px;
      opacity: 0;
      animation: sparkle 5s linear infinite;
      pointer-events: none;
    }

    @keyframes chomp {
      0%   { transform: translateX(0) scale(1); opacity: 1; }
      45%  { transform: translateX(calc(-1 * (var(--w) - 180px))) rotate(-8deg) scale(1.05); opacity: 1; }
      52%  { transform: translateX(calc(-1 * (var(--w) - 180px))) rotate(8deg) scale(.88); opacity: .2; }
      55%  { transform: translateX(calc(-1 * (var(--w) - 180px))) scale(.6); opacity: 0; }
      56%  { transform: translateX(0) scale(.6); opacity: 0; } /* instant reset off-screen */
      100% { transform: translateX(0) scale(1); opacity: 1; }
    }

    @keyframes sparkle {
      0%, 40% { opacity: 0; transform: translateY(0) scale(.6); }
      46% { opacity: 1; transform: translateY(-6px) scale(1); }
      55% { opacity: 0; transform: translateY(-12px) scale(1.2); }
      100% { opacity: 0; }
    }

    /* Optional pause on hover for fun/control */
    .scene:hover .lettuce,
    .scene:hover .giraffe,
    .scene:hover .sparkle { animation-play-state: paused; }
